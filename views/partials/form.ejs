<div class="form-group">
    <label for="itemname"> Item Name </label>
    <input 
        type="text"
        name="itemName"
        id="itemname"
        class="form-control"
        placeholder="Enter item name"
        required
        value="<%= product.itemName %>"
    />
</div>

<div class="form-group">
    <label for="description"> Item Description </label>
    <textarea 
        name="itemDesc"
        id="description"
        class="form-control"
        placeholder="Enter item description"
        required
    ><%= product.itemDesc %></textarea>
</div>

<div class="form-group">
    <label for="itemcategory"> Item Category </label>
    <select class="custom-select" id="itemcategory" name="itemCategory">
        <option value="<%= product.itemCategory %>"> Select a category </option>
        <option value="Electronics"> Electronics </option>
        <option value="Fashion"> Fashion </option>
        <option value="Health and Household"> Health & Household </option>
        <option value="Home and Kitchen"> Home & Kitchen </option>
        <option value="Sports"> Sports </option>
        <option value="Food"> Food </option>
        <option value="Other Products"> Other products </option>
    </select>
</div>

<div class="form-group">
    <label for="itemqty"> Quantity </label>
    <input 
        type="number"
        name="itemQty"
        id="itemqty"
        class="form-control"
        placeholder="Enter the quantity"
        required
        value="<%= product.itemQty %>"
    />
</div>

<div class="form-group">
    <label for="itemprice"> Price </label>
    <input 
        type="number"
        name="itemPrice"
        id="itemprice"
        class="form-control"
        placeholder="Enter the price"
        required
        value="<%= product.itemPrice %>"
    />
</div>

<div class="form-group">
    <label for="image"> Image </label>
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="customFile" name="image" required>
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
</div>

<button class="btn btn-danger btn-lg mr-2"> Submit </button>
<a href="/user/dashboard" class="btn btn-dark btn-lg mt-4 d-inline"> Cancel </a>